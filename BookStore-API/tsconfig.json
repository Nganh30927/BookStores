{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs", 
        "outDir": "dist/",
        "strict": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
      },
      "include": ["src/**/*", "server.ts"],
      "exclude": ["node_modules"]
}